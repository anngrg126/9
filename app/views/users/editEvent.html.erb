<div class="container-fluid">

<h4>Add Event</h4>
<form class="" action="/editEvent/<%= @event.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">

  <label for="name">Name: </label>
  <input type="text" class="form-control" name="name" value="" placeholder="<%= @event.name %>">

  <label for="date">Date: </label>
  <input type="date" class="form-control" name="date" value="" placeholder="<%= @event.date %>">

  <label for="location">Location: </label>
  <input type="text" class="form-control" name="location" value="" placeholder="<%= @event.location %>">

  <label for="state">State: </label>
  <select class="" name="">
  <%= states.each do |state| %>
    <option value="<%=state[:value]%>"><%=state[:abbr]%></option>
  <% end %>
</select>

  <br>
  <input type="submit" name="" class="btn btn-primary" value="Update Records">

</form>
</div>
